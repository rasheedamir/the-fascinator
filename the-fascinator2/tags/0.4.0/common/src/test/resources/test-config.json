{
    "numbers": ["one", "two", "three"],
    "storage": {
        "type": "fedora3",
         "config": {
             "uri": "http://localhost:8080/fedora",
             "username": "fedoraAdmin",
             "password": "fedoraAdmin"
        }
    },
    "indexer": {
        "type": "solr",
        "config": {
            "uri": "http://localhost:8080/solr",
            "username": "solrAdmin",
            "password": "${solr.password}",
            "autocommit": true
        }
    },
    "test": "testing",
    "sample": {
        "property": "${sample.property}"
    },
    "transformer": {
        "conveyer": ["aperture", "ice2"],
        "ints": ["${one}", 2, 3]
    },
    
  "portal" : {
    "name" : "default",
    "description" : "Everything",
    "query" : "",
    "records-per-page" : "10",
    "facet-count" : "25",
    "facet-sort-by-count" : "true",
    "facet-fields" : {
      "file_path": {
        "label": "Path",
        "display": "tree"
      },
      "f_dc_subject": {
        "label": "Subject",
        "display": "list"
      },
      "f_dc_creator": {
        "label": "Creator",
        "display": "list"
      },
      "f_dc_format": {
        "label": "Format",
        "display": "list"
      },
      "f_dc_type": {
        "label": "Type",
        "display": "list"
      },
      "repository_name": {
        "label": "Source",
        "display": "list"
      },
      "repository_type": {
        "label": "Source type",
        "display": "list"
      }
    },
    "backup": {
      "email": "fascinator@usq.edu.au",
      "paths": {
        "${user.home}/.fascinator/backup": {
            "active": false,
            "ignoreFilter": ".svn|.ice|.*|~*",
            "include-rendition-meta": true,
            "include-portal-view": false
        },
        "${user.home}/.fascinator/backup1": {
            "active": true,
            "ignoreFilter": ".svn|.ice|.*|~*",
            "include-rendition-meta": true,
            "include-portal-view": true
        }
      }
    }
  }
}
